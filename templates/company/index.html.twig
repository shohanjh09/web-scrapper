{% extends 'company/base.html.twig' %}

{% block title %}Company Database{% endblock %}

{% block body %}
    <div class="mt-5 container">
        <div class="container text-center"> <!-- Add the 'text-center' class -->
            <h1 class="mb-4">Company Database</h1>
            <!-- Rest of your content... -->
        </div>
        <div class="row mb-3">
            <div class="col">
                <a href="{{ path('app_company_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
            <div class="col">
                {{ form_start(filterForm, {'attr': {'class': 'form-inline'}}) }}
                <div class="input-group">
                    {{ form_widget(filterForm.search, {'attr': {'class': 'form-control', 'placeholder': 'Search by name or code'}}) }}
                    {{ form_end(filterForm) }}
                </div>

            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Registration Code</th>
                    <th>VAT</th>
                    <th>Address</th>
                    <th>Mobile Phone</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for company in pagination %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.companyName }}</td>
                        <td>{{ company.registrationCode }}</td>
                        <td>{{ company.vat }}</td>
                        <td>{{ company.address }}</td>
                        <td>{{ company.mobilePhone }}</td>
                        <td>
                            <div class="custom-button-group">
                                <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                {{ include('company/_delete_form.html.twig') }}
                            </div>
                        </td>


                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="pagination justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
                </ul>
            </nav>
        </div>

    </div>
{% endblock %}

<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Company index{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
            <a class="navbar-brand{% if app.request.attributes.get('_route') == 'company_index' %} btn btn-primary{% else %} btn btn-link{% endif %}"
               href="{{ path('company_index') }}">Home</a>
            <a class="navbar-brand{% if app.request.attributes.get('_route') == 'company_search' %} btn btn-primary{% else %} btn btn-link{% endif %}"
               href="{{ path('company_search') }}">Company Search</a>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
{% endblock %}

{% block customJavascript %}{% endblock %}
</body>
</html>

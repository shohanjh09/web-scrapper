<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Company index{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
            <a class="navbar-brand{% if app.request.attributes.get('_route') == 'company_index' %} btn btn-primary{% else %} btn btn-link{% endif %}"
               href="{{ path('company_index') }}">Home</a>
            <a class="navbar-brand{% if app.request.attributes.get('_route') == 'company_search' %} btn btn-primary{% else %} btn btn-link{% endif %}"
               href="{{ path('company_search') }}">Company Search</a>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-3.6.0.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block customJavascript %}{% endblock %}
</body>
</html>
